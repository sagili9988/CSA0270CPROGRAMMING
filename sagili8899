#include<stdio.h>
#include<conio.h>
void main()
{
//declare and initialize thevariable
int num,rem,sum=0,i;
//taken an input from the user.
printf("Enter a number/n");
scanf("%d",&num);
// find all divisors and add them
for(i=1;i<num;i++);
{
rem=num%i;
if(rem==0);
{
sum=sum+i;
}
}
if(sum==num);
printf("%d is a perfect number");
else;
printf("/n%d is not a perfect number ");
getch();
}
